CC = @CC@
CFLAGS = @CFLAGS@

AR = ar
AR_OPT = ruv
RANLIB = @RANLIB@
INSTALL = @INSTALL@
STRIP = strip
RM = rm
RMOPTS = -fv

prefix = $(DESTDIR)/@prefix@
exec_prefix = @exec_prefix@
bindir = $(exec_prefix)/bin
libdir = @libdir@
includedir = @includedir@
infodir = @infodir@

ifeq ($(HOST),w1d5tcs)
  RMOPTS = -f
else
endif

INCLUDE    = -I../include
LIBD       = ../lib
LIBA       = $(LIBD)/libskycalc.a
LIBO       = libskycalc.o

SUBDIRS =

all:	$(LIBA)

.PHONY: clean dep

clean:
	$(RM) $(RMOPTS) *.o

realclean: clean
	$(RM) $(RMOPTS) $(LIBA)
	$(RM) $(RMOPTS) Makefile


distclean:

$(LIBA)		:  $(LIBO)
	$(AR) $(AR_OPT) $(LIBA) $(LIBO)
	$(RANLIB) $(LIBA)


## Suffixes ##
.c.o:
	$(CC) -c $(INCLUDE) $(CFLAGS) $(GGDB) $(PG) $<

dep:
	gcc -MM -MG ${INCLUDE} *.cc > .depend

-include .depend
